{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --config Debug -v",
            // "problemMatcher": [
            //     "$gcc"
            // ]
        },
        {
            "label": "Clean Debug",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --config Debug --target clean -v",
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --config Release -v"
            // "problemMatcher": [
            //     "$gcc"
            // ]
        },
        {
            "label": "Clean Release",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --config Release --target clean -v",
        },
        {
            "label": "Build RelWithDebInfo",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --config RelWithDebInfo -v",
            // "problemMatcher": [
            //     "$gcc"
            // ]
        },
        {
            "label": "Clean RelWithDebInfo",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --config RelWithDebInfo --target clean -v",
        },
        {
            "label": "Setup Environment Windows",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "Ninja Multi-Config",
                ".",
                "-B",
                "build",
                "-DCMAKE_TOOLCHAIN_FILE:PATH=toolchains/x86_64Win32MinGW.cmake"
            ]
        },
        {
            "label": "Setup Environment Linux",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "Ninja Multi-Config",
                ".",
                "-B",
                "build",
                "-DCMAKE_TOOLCHAIN_FILE:PATH=toolchains/x86_64LinuxGnuGCC.cmake"
            ]
        },
        {
            "label": "Setup Environment MacOS",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "Ninja Multi-Config",
                ".",
                "-B",
                "build",
                "-DCMAKE_TOOLCHAIN_FILE:PATH=toolchains/x86_64MacOSLLVM.cmake"
            ]
        },
        {
            "label": "Cleanup Environment",
            "type": "shell",
            "command": "rm -r build",
        },
    ]
}